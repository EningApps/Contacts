<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardView2"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/grey_border"
    app:cardElevation="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignStart="@+id/cardView2"
            android:layout_alignTop="@+id/cardView2">


            <TextView
                android:id="@+id/send_messageTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="viewStart"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:textSize="22sp"
                android:clickable="true"
                android:background="@drawable/phone_activities_selector"
                android:text="Отправить сообщение" />

            <TextView
                android:id="@+id/send_contactTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:background="@drawable/phone_activities_selector"
                android:text="Отправить контакт" />

            <TextView
                android:id="@+id/add_to_favoriteTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:background="@drawable/phone_activities_selector"
                android:text="Добавить в избранное" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
