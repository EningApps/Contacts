<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView2"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/grey_border"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/cardView2"
        android:layout_alignTop="@+id/cardView2"
        android:orientation="vertical">


        <TextView
            android:id="@+id/send_contactTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@drawable/phone_activities_selector"
            android:clickable="true"
            android:text="Отправить контакт"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/add_to_favoriteTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@drawable/phone_activities_selector"
            android:clickable="true"
            android:text="Добавить в избранное"
            android:textSize="22sp" />
    </LinearLayout>


</android.support.v7.widget.CardView>
