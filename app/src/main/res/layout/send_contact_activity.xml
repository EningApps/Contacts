<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        app:srcCompat="@drawable/back_arrow_minimal" />

    <de.hdodenhof.circleimageview.CircleImageView

        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp"
        android:src="@drawable/unknown_contact"
        android:id="@+id/send_contact_photoIV" />

    <TextView
        android:id="@+id/send_contact_nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_contact_photoIV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textSize="25sp"
        android:text="Name" />

    <TextView
        android:id="@+id/contact_id_keyTV"
        android:layout_width="320dp"
        android:layout_height="64dp"
        android:layout_below="@+id/send_contact_nameTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/wide_grey_border"
        android:gravity="center"
        android:hint="Contact's ID"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/contact_id_keyTV"
        android:layout_marginTop="11dp"
        android:fontFamily="monospace"
        android:text="Введите этот код на другом устройстве, чтобы добавить контакт."
        android:textColor="@color/light_grey"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

</RelativeLayout>